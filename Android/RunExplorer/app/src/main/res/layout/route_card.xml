<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/route_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/tv_vertical_padding"
    android:layout_marginBottom="@dimen/tv_vertical_padding"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_card_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name: "/>
        <TextView
            android:id="@+id/date_card_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/tv_horizontal_padding"
            android:paddingEnd="@dimen/tv_horizontal_padding"
            android:text="date: "/>
        <TextView
            android:id="@+id/time_card_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/tv_horizontal_padding"
            android:paddingEnd="@dimen/tv_horizontal_padding"
            android:text="time: "/>
        <TextView
            android:id="@+id/distance_card_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/tv_horizontal_padding"
            android:paddingEnd="@dimen/tv_horizontal_padding"
            android:text="distance: "/>
        <Button
            android:id="@+id/choose_route_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_route"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
